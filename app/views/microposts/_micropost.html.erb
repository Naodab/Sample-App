<li id="micropost-<%= micropost.id %>" class="micropost">
    <%= link_to gravatar_for(micropost.user, 50), micropost.user, class: "micropost-avatar" %>
    <div class="content-micropost-container">
        <div class="micropost-header">
            <div class="content-micropost__header">
                <div class="user"><%= link_to micropost.user.name, micropost.user %></div>
                <div class="timestamp">
                    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
                </div>
            </div>
            <% if current_user?(micropost.user) %>
                <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: "delete-link" %>
            <% end %>
        </div>
        <span class="content">
            <%= micropost.content %>
            <%= image_tag micropost.display_image if micropost.image.attached? %>
        </span>
    </div>
</li>
