<%= provide(:title, "Log In") %>
<div class="content-container center center--column">
  <h1>Log In</h1>
  <div class="row">
    <div class="form-container">
      <%= form_with(url: login_path, scope: :session, data: { turbo: false }) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email %>

        <div class="label-with-l">
          <%= f.label :password %>
          <%= link_to "(forgot password)", new_password_reset_path, class: "forgot-password-link" %>
        </div>
        <%= f.password_field :password %>

        <%= f.label :remember_me, class: "form-checkbox" do%>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>

        <%= f.submit "Login", class: "btn" %>
      <% end %>
    </div>
  </div>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
