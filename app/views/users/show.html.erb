<% provide(:title, @user.name) %>

<div class="row">
  <aside>
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, 80 %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<div>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
